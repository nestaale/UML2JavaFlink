<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="UML2JavaFlink">
    <property name="ECLIPSE_HOME" value="../../../eclipse/java-oxygen/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="UML2JavaFlink.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/UML2JavaFlink/bin"/>
    </path>

    <path id="UML2JavaFlink.classpath">
        <path refid="UML2JavaFlink.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="UML2JavaFlink.libraryclasspath.alljars">
        <pathelement location="../UML2JavaFlink/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="UML2JavaFlink.classpath.alljars">
        <path refid="UML2JavaFlink.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="UML2JavaFlink.main.Generate" classpathref="UML2JavaFlink.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="UML2JavaFlink.main.Generate" classpathref="UML2JavaFlink.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
